<%- include('../_header_footer/adminheader') %>

<div class="container">
    <h1>Upload </h1>
    <a href="pages/admin">back to home</a><!--i dont know-->
    <br><br>

    <form action="/admin/add_page" method="post">
        <div class="form-group">
            <label for="">Product Name</label>
            <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Title">
        </div>

        <div class="form-group">
            <label for="">Image</label>
            <input type="file" class="form-control" name="image" value="<%= image %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Description</label>
            <input type="text" class="form-control" name="desc" value="<%= desc %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Price</label>
            <input type="number" class="form-control" name="price" value="<%= price %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Quantity</label>
            <input type="number" class="form-control" name="qty" value="<%= qty %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Category</label>
            <input type="text" class="form-control" name="category" value="<%= category %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Brand</label>
            <input type="text" class="form-control" name="brand" value="<%= brand %>" placeholder="Slug">
        </div>

        <button class="btn btn-primary">Submit</button>

    </form>
</div>

<%- include('../_header_footer/adminfooter') %>
